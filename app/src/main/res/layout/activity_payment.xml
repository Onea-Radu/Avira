<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PaymentActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Your selection"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="15">
        <ImageView
            android:id="@+id/paymentProductImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/paymentMethodSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:visibility="visible"
            android:id="@+id/amountPayedTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Amount payed: "/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <!--cash payment-->
    <LinearLayout
        android:id="@+id/cashLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="16.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/one_dollar_bill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dollarBillsSize"
                android:layout_gravity="center"
                android:src="@drawable/one_dollar_bill"/>
            <TextView
                android:id="@+id/one_dollar_billNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="16.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/five_dollar_bill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dollarBillsSize"
                android:layout_gravity="center"
                android:src="@drawable/five_dollar_bill"/>
            <TextView
                android:id="@+id/five_dollar_billNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="16.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ten_dollar_bill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dollarBillsSize"
                android:layout_gravity="center"
                android:src="@drawable/ten_dollar_bill"/>
            <TextView
                android:id="@+id/ten_dollar_billNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="16.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/twenty_dollar_bill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dollarBillsSize"
                android:layout_gravity="center"
                android:src="@drawable/twenty_dollar_bill"/>
            <TextView
                android:id="@+id/twenty_dollar_billNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="16.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fifty_dollar_bill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dollarBillsSize"
                android:layout_gravity="center"
                android:src="@drawable/fifty_dollar_bill"/>
            <TextView
                android:id="@+id/fifty_dollar_billNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="16.6"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/one_hundred_dollar_bill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dollarBillsSize"
                android:layout_gravity="center"
                android:src="@drawable/one_hundreed_dollar_bill"/>
            <TextView
                android:id="@+id/one_hundred_dollar_billNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
    <!--card payment-->
    <EditText
        android:visibility="gone"
        android:id="@+id/cardDetailsEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:hint="card number"/>
    <View
        android:id="@+id/space1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <Button
        android:visibility="gone"
        android:id="@+id/payButton"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:text="pay"/>
    <View
        android:id="@+id/space2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/changeTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Change: "/>
</LinearLayout>